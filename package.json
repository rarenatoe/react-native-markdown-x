{
  "name": "react-native-markdown-x",
  "version": "0.1.0",
  "description": "TypeScript-first React Native markdown renderer with CommonMark compliance, native component rendering, and enhanced default features.",
  "packageManager": "yarn@4.9.2",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "workspaces": [
    "example"
  ],
  "directories": {
    "doc": "doc"
  },
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "keywords": [
    "react",
    "react-native",
    "ios",
    "android",
    "native",
    "markdown",
    "commonmark",
    "markdown-it"
  ],
  "scripts": {
    "example": "yarn workspace react_native_markdown_x_example",
    "test": "jest",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "release": "release-it --only-version"
  },
  "dependencies": {
    "css-to-react-native": "^3.2.0",
    "markdown-it": "^14.1.0",
    "react-native-fit-image": "^1.5.5"
  },
  "peerDependencies": {
    "react": ">=16.2.0",
    "react-native": ">=0.50.4"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.33.0",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native/babel-preset": "0.78.2",
    "@react-native/eslint-config": "^0.78.0",
    "@release-it/conventional-changelog": "^9.0.2",
    "@types/css-to-react-native": "^3.0.2",
    "@types/jest": "^29.5.5",
    "@types/markdown-it": "^12.2.3",
    "@types/react": "^19.1.9",
    "@typescript-eslint/parser": "^8.39.1",
    "commitlint": "^19.6.1",
    "del-cli": "^5.1.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-native": "^5.0.0",
    "eslint-plugin-react-x": "^1.52.3",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "react": "^19.1.1",
    "react-native": "0.81.0",
    "react-native-builder-bob": "^0.40.8",
    "release-it": "^17.10.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "create-react-native-library": {
    "languages": "js",
    "type": "library",
    "version": "0.52.1"
  }
}
